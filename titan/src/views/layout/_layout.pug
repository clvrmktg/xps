      s1.charset='UTF-8';
      s1.setAttribute('crossorigin','*');
      s0.parentNode.insertBefore(s1,s0);
      })();
    // End of Tawk.to Script

    
    input#click(class='[ hidden ]' type='checkbox' aria-labelledby='prompt')

    #container(class='[ container ]')
      //-  Include Site Header
      include _navbar
      
      //- #wrapper(class='[ content--wrapper ]')
      block content
      
      //- Include Site Footer
      include _footer
          
        //- include ../partials/_sidebar

      //- +breadcrumbs(crumbs)(class='[ pb--1 ]')
