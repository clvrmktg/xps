include ../_var
include ../utils/_mixins
include ../utils/_obscure
include ../utils/_icons
include ../components/_breadcrumbs
include ../components/team/_squares
include ../components/_arrow-link
include ../graphics/_icons

doctype html

block var

html#page(lang='en' prefix="og: https://ogp.me/ns#")
  
  head
  
    meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
    
    //- Site Title
    title= home ? `${siteName} | ${tagLine}` : `${title} | ${siteName}`
    //- title= title
    //- Site Description
    meta(name='description' content= description)
    //- Responsive Tag
    meta(name='viewport', content='width=device-width, initial-scale=1.0, viewport-fit=cover')

    //- Google hreflang Tag
    link(rel='canonical', href= site + pageUrl)
  
    //- Preconnect
    link(rel='preconnect', href='https://res.cloudinary.com/filiio/')
    //- link(rel='preconnect', href='https://connect.facebook.net')


    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
    link(rel='preconect' href='https://aggregate.twic.pics/?v1')

    - hash = new Date().getTime()

    //- CSS — START
    if pro
      link(rel='preload', href='/styles/style-version.min.css', as='style')
      link(rel='preload', href="/scripts/snippets-version.js", as='script')
      //- link(rel='preload' href='https://kit.fontawesome.com/b6fccca418.js' as='script')
      link(rel='stylesheet', href='/styles/style-version.min.css', type='text/css')
    else
      link(rel='preload', href=`/styles/style.css?${hash}`, as='style')
      //- link(rel='preload', href=`/scripts/snippets.build.js?${hash}`, as='script')
      link(rel='stylesheet', href=`/styles/style.css?${hash}` type='text/css')

    noscript
      link(rel="stylesheet", href=`/styles/noscript.css?${hash}` type='text/css')
    //- CSS — END

    //- Site Scripts — START
    script.
      const cloudinary = 'filiio'
    +script('snippets', false, async )
    //- Site Scripts — END

    //- Site Favicons - START
    link(rel='icon' href='/favicon.svg')
    link(rel='mask-icon' href='/safari-pinned-tab.svg' color='#9395A1')
    link(rel='apple-touch-icon' href='/apple-touch-icon.png')
    link(rel='manifest' href='/manifest.json')
    meta(name='theme-color' content='#ffffff')
    //- Site Favicons - END
      
  body
    // Start of Tawk.to Script
    script(type='text/javascript').
      var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
